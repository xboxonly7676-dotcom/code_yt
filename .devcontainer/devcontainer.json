{
  "name": "Video Renderer API",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y ffmpeg && pip install -r requirements.txt",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "Video Renderer API",
      "visibility": "public"   // ðŸš€ ensures Codespaces port is public
    }
  },
  "customizations": {
    "codespaces": {
      "forwardPorts": [8080]  // ðŸš€ ensures auto-forward
    }
  },
  "postStartCommand": "uvicorn app:app --host 0.0.0.0 --port 8080 --reload"
}
